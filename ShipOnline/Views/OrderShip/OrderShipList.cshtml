<div id="OrderShipList">

    <div id="divResultLeft">
        <div class="divLeftTop">
            <div class="divLeftInfo">
                @if (currentUser != null)
                {
                    <div class="textInfo" style="margin-top:20px">Mã KH: <span>@currentUser.USER_ID</span></div>
