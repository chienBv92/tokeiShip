@using ShipOnline.Models.Define;

@model List<OrderShipModel>
@{
    ViewBag.Title = "HÓA ĐƠN VẬN CHUYỂN";
    Layout = null;
}
<div>
    @for (int i = 0; i < Model.Count();i++ )
    {
        <div id="PopupGetInforOrder">
        <div class="">
            <div class="title">
                HÓA ĐƠN VẬN CHUYỂN
            </div>
            <div class="headerLeft">
                <div class="headerLeftTop">
                    <div class="logo-tokeiShip"><img class="img-logo" src="/Logo/logo_hoa_don.svg" /></div>
                    <div class="logo-tokeiShip"><div class="shipCode">Mã đơn: @Model[i].SHIP_CODE</div></div>
                    
                    <div class="StoreCode"><span>Mã lưu kho: @Model[i].RECEIVED_CITY<span>. </span>@Model[i].RECEIVED_DISTRICT<span>. </span>@Model[i].RECEIVED_TOWN<span>. </span>@Model[i].RECEIVE_HOUR_FROM<span>-</span>@Model[i].RECEIVE_HOUR_TO<span>_</span>@Model[i].RECEIVE_TIME_DATE.ToString("dd")</span></div>
                </div>
                <div class="headerLeftBottom">
                    <table class="tblLeftBottom">
                        <tr class="headerTable">
                            <td class="col-table-1 center">Trạng thái đơn hàng</td>
                            <td class="col-table-2 center">Nhân viên tiếp nhận</td>
                            <td class="col-table-3 center">Dự kiến giao hàng</td>
                        </tr>
                        <tr class="contentTable">
                            <td class="col-table-1 center">@Model[i].ORDER_STATUS_TEXT</td>
                            <td class="col-table-2 center">@Model[i].ACCEPTANCE_NAME</td>
                            <td class="col-table-3 center">@Model[i].RECEIVE_HOUR_FROM<span>h -</span>@Model[i].RECEIVE_HOUR_TO<span>h Ngày: </span>@Model[i].RECEIVE_TIME_DATE.ToString("dd/MM/yyyy")</td>
                        </tr>
                    </table>
                </div>

            </div>
            <div class="headerRight">

            </div>

            <div id="MainTable">
                <table class="tblMainTable">
                    <tr class="headerMainTable">
                        <td class="col-table-1 center"></td>
                        <td class="col-table-2 center">THÔNG TIN NGƯỜI GỬI</td>
                        <td class="col-table-3 center">THÔNG TIN NGƯỜI NHẬN</td>
                    </tr>
                    <tr class="contentTable row-1">
                        <td class="col-table-1 center text-bold">Họ tên</td>
                        <td class="col-table-2 center">@Model[i].SENDER_NAME</td>
                        <td class="col-table-3 center">@Model[i].RECEIVED_NAME</td>
                    </tr>
                    <tr class="contentTable row-2">
                        <td class="col-table-1 center text-bold">Số điện thoại</td>
                        <td class="col-table-2 center">@Model[i].SENDER_PHONE</td>
                        <td class="col-table-3 center">@Model[i].RECEIVED_PHONE</td>
                    </tr>
                    <tr class="contentTable row-3">
                        <td class="col-table-1 center text-bold">Địa chỉ</td>
                        <td class="col-table-2 center">
                            @if (Model[i].SENDER_ADDRESS != null && Model[i].SENDER_ADDRESS.Length > 45)
                            {
                        <div title="@Model[i].SENDER_ADDRESS">@Model[i].SENDER_ADDRESS.Substring(45) ...</div>
                            }
                            else
                            {
                        <div title="@Model[i].SENDER_ADDRESS">@Model[i].SENDER_ADDRESS</div>
                            }

                            <div>@Model[i].SENDER_TOWN_NAME, @Model[i].SENDER_DISTRICT_NAME, @Model[i].SENDER_CITY_NAME</div>
                        </td>
                        <td class="col-table-3 center">
                            @if (Model[i].RECEIVED_ADDRESS != null && Model[i].RECEIVED_ADDRESS.Length > 45)
                            {
                        <div title="@Model[i].RECEIVED_ADDRESS">@Model[i].RECEIVED_ADDRESS.Substring(45) ...</div>
                            }
                            else
                            {
                        <div title="@Model[i].RECEIVED_ADDRESS">@Model[i].RECEIVED_ADDRESS</div>
                            }
                            <div>@Model[i].RECEIVE_TOWN_NAME, @Model[i].RECEIVE_DISTRICT_NAME, @Model[i].RECEIVE_CITY_NAME</div>
                        </td>
                    </tr>
                    <tr class="contentTable row-4">
                        <td class="col-table-1 center text-bold">Cước phí</td>
                        <td class="col-table-2 center">
                            @if (Model[i].USER_PAYMENT == "0")
                            {
                        <div class="money-product">@Model[i].PRICE_SHIP.ToString("#,##0") VND</div>
                            }
                            else
                            {
                        <div class="money-product">0 VND</div>
                            }
                        </td>
                        <td class="col-table-3 center">
                            @if (Model[i].USER_PAYMENT == "1")
                            {
                        <div class="money-product">@Model[i].PRICE_SHIP.ToString("#,##0") VND</div>
                            }
                            else
                            {
                        <div class="money-product">0 VND</div>
                            }
                        </td>
                    </tr>
                    <tr class="contentTable row-5">
                        <td class="col-table-1 center"></td>
                        <td class="col-table-2 "><div class="title-money">Thu hộ: </div> <div class="money-product">@Model[i].PRICE_PRODUCT.Value.ToString("#,##0") VND</div></td>
                        <td class="col-table-3 "><div class="title-money">Giá hàng: </div> <div class="money-product">@Model[i].PRICE_PRODUCT.Value.ToString("#,##0") VND</div></td>
                    </tr>
                    <tr class="contentTable row-6 text-bold">
                        <td class="col-table-1 center">Tổng</td>
                        <td class="col-table-2 center">COD</td>
                        <td class="col-table-3"><div class="title-money">Thu: </div> <div class="money-product">@Model[i].RECEIVE_TOTAL_MONEY.ToString("#,##0") VND</div></td>
                    </tr>
                </table>
            </div>
            <div id="TableBottom">
                <table class="tblTableBottom">
                    <tr class="headerTable text-bold">
                        <td class="col-table-1 center">Tên hàng hóa</td>
                        <td class="col-table-2 center">Khối lượng</td>
                        <td class="col-table-3 center">Kích thước</td>
                        <td class="col-table-4 center">Loại hàng</td>
                        <td class="col-table-5 center">Giao hàng</td>
                    </tr>
                    <tr class="contentTable row-1">
                        <td class="col-table-1 center" title="@Model[i].PRODUCT_NAME">@Model[i].PRODUCT_NAME</td>

                        <td class="col-table-2 center">@Model[i].PRODUCT_WEIGHT_TEXT</td>
                        <td class="col-table-3 center">@Model[i].PRODUCT_SIZE_TEXT</td>
                        <td class="col-table-4 center">@Model[i].PRODUCT_TYPE_TEXT</td>
                        <td class="col-table-5 center">@Model[i].OTHER_REQUIREMENT_TEXT</td>
                    </tr>
                </table>
            </div>

        </div>
    </div>
    }
    
</div>

