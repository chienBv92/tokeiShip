            text-overflow: ellipsis;
        }

        .tblMainTable .row-4, .tblMainTable .row-5 {
            line-height: 23px;
            color: #70AD47;
        }

        .tblMainTable .row-6 {
            line-height: 34px;
            color: red;
        }

        .tblMainTable .money-product {
            width: 140px;
            text-align: right;
            float: right;
            margin-right: 120px;
        }

        .tblMainTable .title-money {
            margin-left: 10px;
            width: 70px;
            float: left;
        }
    /*////*/
    .tblTableBottom {
        margin-top: 10px;
        border: 1px solid;
    }

        .tblTableBottom .headerTable {
            font-weight: bold;
            line-height: 33px;
        }

        .tblTableBottom .col-table-1 {
            width: 340px;
            border: 1px solid;
        }

        .tblTableBottom .col-table-2 {
            width: 100px;
            border: 1px solid;
        }

        .tblTableBottom .col-table-3 {
            width: 150px;
            border: 1px solid;
        }

        .tblTableBottom .col-table-4, .tblTableBottom .col-table-5 {
            width: 150px;
            border: 1px solid;
        }

        .tblTableBottom .row-1 {
            line-height: 24px;
            border: 1px solid #000000;
        }

    .text-bold {
        font-weight: bold;
    }

    #showPopup .modal-popup.viewOrderDetail-screen {
        width: 950px !important;
        margin-top: 10px;
        height: 560px !important;
        margin:auto;
    }

    #showPopup .main-popup {
        overflow-y: hidden;
    }

    #PopupGetInforOrder .text-green {
        color: #70AD47;
    }

    #PopupGetInforOrder .divButton {
        margin-top: 20px;
    }

    #showPopup .viewOrderDetail-popup {
        height: 550px !important;
    }
</style>
